<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Categories</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .serial-col {
      width: 60px;
      text-align: center;
      white-space: nowrap;
    }

    .name-col {
      width: 180px;
      text-align: center;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .delete-col,
    .update-col {
      width: 50px;
      padding: 4px !important;
      text-align: center;
      white-space: nowrap;
    }

    .delete-col a,
    .update-col a {
      font-size: 18px;
      text-decoration: none;
    }

    .search-wrapper {
      position: relative;
    }

    .search-wrapper input {
      padding-right: 60px;
    }

    .search-wrapper .clear-btn {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      font-size: 16px;
      color: #6c757d;
    }

    .search-wrapper .clear-btn:hover {
      color: #000;
    }
    @media (max-width: 768px) {
      h1 {
        text-align: center;
        font-size: 22px;
      }

      .row.mb-3 {
        flex-direction: column;
        gap: 10px;
      }

      .search-wrapper {
        width: 100%;
      }

      .add-employee-btn {
        width: 100%;
        margin-left: 0;
      }

      .serial-col {
        min-width: 50px;
      }

      .name-col {
        min-width: 160px;
      }

      .delete-col,
      .update-col {
        min-width: 60px;
      }
    }
  </style>
</head>

<body>

  <%- include("home.ejs") %>
  <br><br>

  <div class="container mt-4">
    <h1 class="mb-4">All Categories</h1>

    <div class="row mb-3 align-items-center">
      <div class="col-md-12 d-flex">
        <div class="search-wrapper flex-grow-1">
          <input type="text" id="searchInput" class="form-control"
                 placeholder="Search category..." onkeyup="searchTable()">
          <span class="clear-btn" onclick="clearSearch()">Clear</span>
        </div>

        <a href="/categories/add" class="btn btn-success add-employee-btn ms-2">
          Add Category
        </a>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-striped text-nowrap" id="categoryTable">
        <thead class="table-dark">
          <tr>
            <th class="serial-col">S.No</th>
            <th class="name-col">Name</th>
            <th class="delete-col">Delete</th>
            <th class="update-col">Update</th>
          </tr>
        </thead>

        <tbody>
          <% if (categories.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center">No categories found</td>
            </tr>
          <% } else { %>
            <% categories.forEach((category, index) => { %>
              <tr>
                <td class="serial-col"><%= ((page - 1) * 10) + index + 1 %></td>
                <td class="name-col" title="<%= category.name %>"><%= category.name %></td>
                <td class="delete-col">
                  <a href="/categories/delete/<%= category.id %>"
                     onclick="return confirm('Are you sure?')">üóëÔ∏è</a>
                </td>
                <td class="update-col">
                  <a href="/categories/edit/<%= category.id %>">‚úèÔ∏è</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    <nav aria-label="Page navigation">
      <ul class="pagination pagination-sm justify-content-center mt-3">
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="/viewcategory?page=<%= page - 1 %>">Previous</a>
        </li>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="/viewcategory?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="/viewcategory?page=<%= page + 1 %>">Next</a>
        </li>
      </ul>
    </nav>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function searchTable() {
      const input = document.getElementById("searchInput").value.toLowerCase();
      const rows = document.querySelectorAll("#categoryTable tbody tr");

      rows.forEach(row => {
        const nameCell = row.children[1].textContent.toLowerCase();
        row.style.display = nameCell.includes(input) ? "" : "none";
      });
    }

    function clearSearch() {
      const input = document.getElementById("searchInput");
      input.value = "";
      searchTable();
      input.focus();
    }
  </script>

</body>
</html>
