<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Products</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .serial-col {
      width: 60px;
      text-align: center;
    }

    .name-col,
    .category-col,
    .category-id-col,
    .price-col,
    .qty-col {
      text-align: center;
    }

    .actions-col {
      width: 90px;
      text-align: center;
    }

    .actions-col a {
      margin: 0 5px;
      font-size: 18px;
      text-decoration: none;
    }

    .search-wrapper {
      position: relative;
    }

    .search-wrapper input {
      padding-right: 60px;
    }

    .search-wrapper .clear-btn {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      font-size: 14px;
      color: #6c757d;
    }

    .search-wrapper .clear-btn:hover {
      color: #000;
    }
    @media (max-width: 768px) {
      h1 {
        text-align: center;
        font-size: 22px;
      }

      .row.mb-3 {
        flex-direction: column;
        gap: 10px;
      }

      .add-product-btn {
        width: 100%;
      }

      .search-wrapper {
        width: 100%;
      }

      .serial-col {
        min-width: 50px;
      }

      .actions-col {
        min-width: 80px;
      }
    }
  </style>
</head>

<body>

  <%- include("home.ejs") %>

  <br><br>

  <div class="container mt-4">
    <h1 class="mb-4">All Products</h1>
    <div class="row mb-3 align-items-center">
      <div class="col-md-12 d-flex">
        <div class="search-wrapper flex-grow-1">
          <input type="text" id="searchInput" class="form-control"
                 placeholder="Search Product..." onkeyup="searchTable()">
          <span class="clear-btn" onclick="clearSearch()">Clear</span>
        </div>

        <a href="/newProduct" class="btn btn-success ms-2 add-product-btn">
          Add Product
        </a>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-striped text-nowrap">
        <thead class="table-dark">
          <tr>
            <th class="serial-col">S.No</th>
            <th class="name-col">Product Name</th>
            <th class="category-id-col">Category ID</th>
            <th class="category-col">Category Name</th>
            <th class="price-col">Price</th>
            <th class="qty-col">Quantity</th>
            <th class="actions-col">Delete</th>
            <th class="actions-col">Edit</th>
          </tr>
        </thead>

        <tbody>
          <% if (products.length === 0) { %>
            <tr>
              <td colspan="8" class="text-center">No products found</td>
            </tr>
          <% } else { %>
            <% products.forEach((product, index) => { %>
              <tr>
                <td class="serial-col"><%= index + 1 %></td>
                <td class="name-col"><%= product.name %></td>
                <td class="category-id-col"><%= product.category_id %></td>
                <td class="category-col"><%= product.category_name %></td>
                <td class="price-col"><%= product.price %></td>
                <td class="qty-col"><%= product.quantity %></td>

                <td class="actions-col">
                  <a href="/delete/<%= product.pid %>"
                     onclick="return confirm('Are you sure?')">üóëÔ∏è</a>
                </td>

                <td class="actions-col">
                  <a href="/edit/<%= product.pid %>">‚úèÔ∏è</a>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    <nav aria-label="Product pagination">
      <ul class="pagination pagination-sm justify-content-center">
        <li class="page-item <%= page === 1 ? 'disabled' : '' %>">
          <a class="page-link" href="/viewproduct?page=<%= page - 1 %>">Previous</a>
        </li>

        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= i === page ? 'active' : '' %>">
            <a class="page-link" href="/viewproduct?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>

        <li class="page-item <%= page === totalPages ? 'disabled' : '' %>">
          <a class="page-link" href="/viewproduct?page=<%= page + 1 %>">Next</a>
        </li>
      </ul>
    </nav>

  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- üîç Search Script -->
  <script>
    function searchTable() {
      const input = document.getElementById("searchInput");
      const filter = input.value.toLowerCase();
      const rows = document.querySelectorAll("tbody tr");

      rows.forEach(row => {
        const text = row.innerText.toLowerCase();
        row.style.display = text.includes(filter) ? "" : "none";
      });
    }

    function clearSearch() {
      document.getElementById("searchInput").value = "";
      searchTable();
    }
  </script>

</body>
</html>
